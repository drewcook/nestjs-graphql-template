{
	"$schema": "https://json.schemastore.org/prettierrc",
  "overrides": [
		{
			"files": ["tsconfig.json"],
			"options": {
				"parser": "json"
			}
		}
	],
	"arrowParens": "avoid",
	"bracketSpacing": true,
	"endOfLine": "lf",
	"insertPragma": false,
	"requirePragma": false,
	"bracketSameLine": false,
	"jsxSingleQuote": false,
	"printWidth": 120,
	"proseWrap": "preserve",
	"quoteProps": "as-needed",
	"semi": false,
	"singleQuote": true,
	"tabWidth": 2,
	"trailingComma": "all",
	"useTabs": true
}
